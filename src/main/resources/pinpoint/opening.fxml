<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.shape.Rectangle?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="pinpoint.OpeningController"
    style="-fx-background-color: #1E1E1E;">

    <!-- Background Rectangle for Logo 5 -->
    <Rectangle fx:id="backgroundRect" width="400" height="600" fill="#7D0000" visible="false" />

    <!-- Shadow -->
    <ImageView fx:id="shadowImage" layoutX="150" layoutY="250" fitWidth="100" fitHeight="30"
        visible="false" />

    <!-- Pin Image -->
    <ImageView fx:id="pinImage" layoutX="175" layoutY="200" fitWidth="50" fitHeight="70"
        visible="false" />

    <!-- "PINpoint" Text -->
    <Text fx:id="pinpointText" layoutX="160" layoutY="300" text="PINpoint"
        style="-fx-font-size: 24px; -fx-fill: #7D0000;" visible="false" />

</AnchorPane>
<!-- This FXML file defines the opening screen of the application with a logo, shadow, and text. -->